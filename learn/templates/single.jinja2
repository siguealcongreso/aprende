    <meta itemprop="description" content="Monitoreo parlamentario ciudadano"><meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:image" content="http://siguealcongreso.org/logo.jpg"/>

    <meta name="twitter:title" content="Sigue al Congreso"/>
    <meta name="twitter:description" content="Monitoreo parlamentario ciudadano"/>
  </head>

  <body lang="en">

<div class="wrapper-masthead">
  <div class="container">
    <header class="masthead clearfix">
      <a href="http://siguealcongreso.org" class="site-avatar"><img src="{{request.static_url('learn:static/logo.jpg')}}" /></a>

      <div class="site-info">
        <h1 class="site-name"><a href="http://siguealcongreso.org/">Sigue al Congreso</a></h1>
        <p class="site-description">Monitoreo parlamentario ciudadano</p>
        <div class="social-media">





        </div>
      </div>

      <nav>
        <a href="/acerca">Acerca de</a>
      </nav>
    </header>
  </div>
</div>

    <header>
	<div class="container">
          <h2>{{info.title}}</h1>
          <h3>{{info.description}}</h2>
	</div>
    </header>

  <main>
    <article class="container">

<div class="content">
  <form action='{{request.path}}#main' method='POST'>
    <input type="hidden" name="index" value="{{ counter }}">
    <input type="hidden" name="n" value="{{ n }}">
    <p class="black">{{ number }}. {{ question.text }}</p>
    {% for option in question.options %}
    <p><label><input type="{{ input_type }}" value="{{ option.index }}" name="{{ counter }}" {% if option.index in indexes %}checked{% endif %} /> {{ option.text }}</label>
    {% endfor %}
    {% if not passed and question %}<p><input type="submit" value="enviar">{% endif %}
    {% if not question %}<p class="lead">{{ info.end | safe }}{% endif %}
  <p class="black">{{ feedback | safe }}
  <p>{% if passed %}<input type="hidden" name="passed" value="passed">
    <input type="submit" value="siguiente">{% endif %}
  </form>
</div>

    </article>
  </main>
    <div class="wrapper-footer">
      <div class="container">
        <footer class="footer">
        © Sigue al Congreso 2023
        </footer>
      </div>
    </div>
  </body>
</html>

