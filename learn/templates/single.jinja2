<html lang="{{request.locale_name}}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Mini curso en línea">
    <link rel="shortcut icon" href="{{request.static_url('learn:static/sac.png')}}">
    <title>Sigue al Congreso - Aprende</title>
    <link href="{{request.static_url('learn:static/css/style.css')}}" rel="stylesheet">
    <link rel="stylesheet" href="/custom.css">

    <meta property="og:title" content="Sigue al Congreso" />
    <meta property="og:description" content="Monitoreo parlamentario ciudadano" />
    <meta property="og:type" content="website" />
